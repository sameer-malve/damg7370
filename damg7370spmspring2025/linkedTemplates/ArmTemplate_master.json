{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "damg7370spmspring2025"
		},
		"Snowflake_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'Snowflake'"
		},
		"Snowflake_LS_NYPD_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'Snowflake_LS_NYPD'"
		},
		"AzureDataLakeStorage_LS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://2025spring7370damg.dfs.core.windows.net/"
		},
		"AzureKeyVault_LS_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://damg7370smspring2025.vault.azure.net/"
		},
		"BlobSpring2025_sasUri": {
			"type": "secureString",
			"metadata": "Secure string for 'sasUri' of 'BlobSpring2025'"
		},
		"Snowflake_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "TEMP_DB"
		},
		"Snowflake_properties_typeProperties_role": {
			"type": "string",
			"defaultValue": "TEMP_ROLE"
		},
		"Snowflake_LS_NYPD_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "CRIME_DATA_DB"
		},
		"Snowflake_LS_NYPD_properties_typeProperties_role": {
			"type": "string",
			"defaultValue": "CRIME_ANALYST_ROLE"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "damg7370spmspring2025_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"Snowflake_password": {
						"value": "[parameters('Snowflake_password')]"
					},
					"Snowflake_LS_NYPD_password": {
						"value": "[parameters('Snowflake_LS_NYPD_password')]"
					},
					"AzureDataLakeStorage_LS_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage_LS_properties_typeProperties_url')]"
					},
					"AzureKeyVault_LS_properties_typeProperties_baseUrl": {
						"value": "[parameters('AzureKeyVault_LS_properties_typeProperties_baseUrl')]"
					},
					"BlobSpring2025_sasUri": {
						"value": "[parameters('BlobSpring2025_sasUri')]"
					},
					"Snowflake_properties_typeProperties_database": {
						"value": "[parameters('Snowflake_properties_typeProperties_database')]"
					},
					"Snowflake_properties_typeProperties_role": {
						"value": "[parameters('Snowflake_properties_typeProperties_role')]"
					},
					"Snowflake_LS_NYPD_properties_typeProperties_database": {
						"value": "[parameters('Snowflake_LS_NYPD_properties_typeProperties_database')]"
					},
					"Snowflake_LS_NYPD_properties_typeProperties_role": {
						"value": "[parameters('Snowflake_LS_NYPD_properties_typeProperties_role')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "damg7370spmspring2025_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'damg7370spmspring2025_ArmTemplate_0')]"
			]
		}
	]
}